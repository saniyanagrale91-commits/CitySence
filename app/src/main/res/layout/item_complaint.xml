<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E6E6E6"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="centerCrop"
            android:background="#F1F1F1"
            android:contentDescription="Complaint Image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Issue -->
        <TextView
            android:id="@+id/txtIssue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Issue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status (pill look) -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDING"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:textSize="12sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_status_pill"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toBottomOf="@id/txtIssue" />

        <!-- LatLng -->
        <TextView
            android:id="@+id/txtLatLng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lat: 0.0, Lng: 0.0"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toBottomOf="@id/txtStatus"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Date -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date: -"
            android:textColor="#777777"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toBottomOf="@id/txtLatLng"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Desc: -"
            android:textColor="#222222"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toBottomOf="@id/txtDate"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- UserId -->
        <TextView
            android:id="@+id/txtUserId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User: -"
            android:textColor="#8A8A8A"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toBottomOf="@id/txtDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>