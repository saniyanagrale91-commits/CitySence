<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient"
    android:padding="18dp">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_city"
        android:contentDescription="Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Smart City Complaint"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/txtSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Report problems with photo + GPS and track status in real-time."
        android:textSize="14sp"
        android:textColor="#555555"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>

    <!-- Report Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/txtSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_report"
                android:contentDescription="Report"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Issue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capture photo and submit with GPS"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN"
                android:textAllCaps="false"
                android:backgroundTint="#6A4BC3"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Map Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_map"
                android:contentDescription="Map"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Complaints Map"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See reported locations on Google Maps"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN"
                android:textAllCaps="false"
                android:backgroundTint="#6A4BC3"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Admin Button -->
    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Admin Panel"
        android:textAllCaps="false"
        android:backgroundTint="#222222"
        android:textColor="#FFFFFF"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/cardMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>